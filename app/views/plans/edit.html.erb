<div class="main_container">
  <h2>スケジュール編集</h2>
  
  <% if flash[:notice] %>
    <p class="alert alert_failure"><%= flash[:notice] %></p>  
  <% end %>  

  <%= render "shared/error", obj: @plan %> 
  
  <%= form_with model: @plan do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
  
      <tr>
        <th><%= f.label :start_date,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>
  
      <tr>
        <th><%= f.label :end_date,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
  
      <tr>
        <th><%= f.label :all_day ,"終日" %></th>
        <td><%= f.check_box :all_day %><br>
        <%= f.label :comment ,"終日の場合はチェックを入れます" %></td>
      </tr>
  
      <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
  
    <div>
      <ul>
        <li><%= f.submit "スケジュールの編集を完了する"%></li>
        <li><%= link_to "スケジュール情報一覧に戻る", :plans %></li>
      </ul>
    </div>
  <% end %>
</div>

<footer>
  <h1>現在の日時：<%= Time.new.to_s(:datetime_jp) %></h1>
</footer>