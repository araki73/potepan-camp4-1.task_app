<div class="main_container">
  <h2>スケジュール詳細</h2>
  
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @plan.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @plan.start_date.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @plan.end_date.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><% @plan.all_day %> 
          <%= if @plan.all_day == 1.to_s
                all_day = "◯"
              end %></td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%=  %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= link_to "スケジュール一覧に戻る", :plans %></li>
      <li><%= link_to "スケジュールを編集する", edit_plan_path %></li>
      <li><%= link_to "スケジュールを削除", :plans %></li>
    </ul>
  </div>
</div>
<footer>
  <h1>現在の日時：<%= Time.new.to_s(:datetime_jp) %></h1>
</footer>